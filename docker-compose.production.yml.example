# Docker Compose Configuration for Production Deployment
# ⚠️ IMPORTANT: Copy this to your server and configure secrets!
# This file is git-ignored for security reasons.

version: "3.8"

services:
  # PostgreSQL Database for Plausible
  plausible_db:
    image: postgres:16-alpine
    restart: always
    volumes:
      - db-data:/var/lib/postgresql/data
    environment:
      - POSTGRES_PASSWORD=postgres
    networks:
      - internal

  # ClickHouse Database for Plausible Events
  plausible_events_db:
    image: clickhouse/clickhouse-server:24.3.3.102-alpine
    restart: always
    volumes:
      - event-data:/var/lib/clickhouse
      - event-logs:/var/log/clickhouse-server
      - ./clickhouse/clickhouse-config.xml:/etc/clickhouse-server/config.d/logging.xml:ro
      - ./clickhouse/clickhouse-user-config.xml:/etc/clickhouse-server/users.d/logging.xml:ro
    ulimits:
      nofile:
        soft: 262144
        hard: 262144
    networks:
      - internal

  # Plausible Analytics
  plausible:
    image: ghcr.io/plausible/community-edition:v2.1.1
    restart: always
    command: sh -c "sleep 10 && /entrypoint.sh db createdb && /entrypoint.sh db migrate && /entrypoint.sh run"
    depends_on:
      - plausible_db
      - plausible_events_db
    ports:
      - "127.0.0.1:8000:8000"
    environment:
      # CHANGE THIS: Generate with: openssl rand -base64 48
      - SECRET_KEY_BASE=CHANGEME_GENERATE_A_RANDOM_64_CHAR_STRING
      # CHANGE THIS: Generate with: openssl rand -base64 24
      - TOTP_VAULT_KEY=CHANGEME_GENERATE_A_RANDOM_32_CHAR_STRING
      - BASE_URL=https://analytics.dnicolay.de
      - DATABASE_URL=postgres://postgres:postgres@plausible_db:5432/plausible_db
      - CLICKHOUSE_DATABASE_URL=http://plausible_events_db:8123/plausible_events_db
    networks:
      - internal

  # Portfolio Next.js Application
  portfolio:
    build:
      context: ./portfolio
      dockerfile: Dockerfile
    restart: always
    ports:
      - "127.0.0.1:3000:3000"
    environment:
      - NODE_ENV=production
    networks:
      - internal
    # Health check
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost:3000"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

networks:
  internal:
    driver: bridge

volumes:
  db-data:
    driver: local
  event-data:
    driver: local
  event-logs:
    driver: local
